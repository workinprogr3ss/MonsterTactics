{
  "name": "monstertactics",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "dev": "pnpm -C apps/web run dev",
    "build": "pnpm -C apps/web run build && pnpm -r --if-present build",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "test": "vitest -u",
    "typecheck": "tsc -b",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "eslint": "^9",
    "eslint-config-prettier": "^9",
    "prettier": "^3",
    "typescript": "^5",
    "vitest": "^2"
  }
}
